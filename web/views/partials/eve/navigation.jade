nav.navbar.navbar-inverse.navbar-fixed-top
  div.container
    div.navbar-header
      button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/") Mango Deliveries
    div#navbar.navbar-collapse.collapse
      ul.nav.navbar-nav.navbar-left
        li(class="#{active === 'Home' ? 'active' : ''}")
          a(href="/eve/eve") Home
          span.sr-only (current)
        li(class="#{active === 'Contracts' ? 'active' : ''}")
          a(href="/eve/contracts") Contracts
      ul.nav.navbar-nav.navbar-right
        if(character)
          li
            a(href="/eve/login") #{character.character_name}
          li
            img(src="#{character.character_portrait}" style="height: 50px;")
            img(src="#{character.corporation_portrait}" style="height: 50px;")
            img(src="#{character.alliance_portrait}" style="height: 50px;")
        else
          form.navbar-form.navbar-right
            div.form-group
              a(href="/eve/login")
                img(src="../evessobutton.png")
