nav.navbar.navbar-inverse.navbar-fixed-top
  div.container
    div.navbar-header
      button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/") Mango Deliveries
    div#navbar.navbar-collapse.collapse
      ul.nav.navbar-nav.navbar-left
        - const homeClass = active === 'Home' ? 'active' : null
        li(class=homeClass)
          a(href="/") Home
          span.sr-only (current)
        - const contractsActive = active === 'Contracts' ? 'active' : null
        li(class=contractsActive)
          a(href="/contracts") Contracts
        if(character.director)
          - const directorPanelActive = active === 'Director Panel' ? 'active' : null
          li(class=directorPanelActive)
            a(href="/director") Director Panel
      ul.nav.navbar-nav.navbar-right
        if(character.id)
          li
            a(href="/login") #{character.characterName}
          li
            - const characterPortrait = character.characterPortrait
            img(src=characterPortrait style="height: 50px;")
            - const corporationPortrait = character.corporationPortrait
            img(src=corporationPortrait style="height: 50px;")
            - const alliancePortrait = character.alliancePortrait
            img(src=alliancePortrait style="height: 50px;")
        else
          form.navbar-form.navbar-right
            div.form-group
              a(href="/login")
                img(src="../evessobutton.png")
